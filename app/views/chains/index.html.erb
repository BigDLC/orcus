<h1>Cron Actions</h1>

<table>
  <tr>
    <th>Action</th>
    <th>Description</th>
    <th>Precondition</th>
    <th>Retries</th>
    <th>Pool</th>
  </tr>

<% @chains.each do |chain| %>
  <tr>
    <td><%=h chain.action_id %></td>
    <td><%=h chain.action.description %></td>
    <td><%=h chain.precondition %></td>
    <td><%=h chain.retries %></td>
    <td><%=h link_to(chain.action.pool.name, :controller => "pools", :action => "show", :id => chain.action.pool.id) %></td>
    <td><%= link_to 'Show', chain %></td>
    <td><%= link_to 'Edit', edit_chain_path(chain) %></td>
    <td><%= link_to 'Destroy', chain, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New chain', new_chain_path %>
